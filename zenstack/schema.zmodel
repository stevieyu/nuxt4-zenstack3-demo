datasource db {
    provider = 'sqlite'
    url = 'file:./dev.db'
}

model Tag {
    id        Int     @id @default(autoincrement())
    name      String @unique
    pid       Int?
    parent    Tag?   @relation("ParentChildrenTag", fields: [pid], references: [id])
    children  Tag[]  @relation("ParentChildrenTag")
}